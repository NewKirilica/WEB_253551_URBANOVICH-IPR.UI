@page "{id:int}"
@model WEB_253551_URBANOVICH.UI.Areas.Admin.Pages.Dishes.DetailsModel
@{
    ViewData["Title"] = "Просмотр";
}

<h2 class="mb-3">Просмотр</h2>

<div class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <img src="@Model.Dish.Image" alt="@Model.Dish.Name" class="img-fluid rounded border"/>
            </div>
            <div class="col-md-8">
                <h4>@Model.Dish.Name</h4>
                <p class="text-muted">@Model.Dish.Description</p>
                <p><strong>Категория:</strong> @Model.Dish.Category?.Name</p>
                <p><strong>Цена:</strong> @Model.Dish.Price.ToString("0.##") BYN</p>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@Model.Dish.Id"><i class="fa-solid fa-pen"></i> Редактировать</a>
    <a class="btn btn-outline-secondary" asp-page="Index">Назад</a>
</div>
