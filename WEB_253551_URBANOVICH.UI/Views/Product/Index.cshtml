@using WEB_253551_URBANOVICH.Domain.Entities
@using WEB_253551_URBANOVICH.Domain.Models
@model ListModel<Dish>

@{
    ViewData["Title"] = "Каталог";
    var categories = ViewData["categories"] as List<Category> ?? new List<Category>();
    var currentCategory = ViewData["currentCategory"] as string ?? "Все";
    var currentNormalized = ViewData["category"] as string;

    var returnUrl = $"{Context.Request.Path}{Context.Request.QueryString}";
}

<div class="row g-3">
    <!-- выбор категории -->
    <div class="col-12 col-md-3 col-lg-2">
        <ul class="nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button"
                   aria-expanded="false">@currentCategory</a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-category="">Все</a>
                    </li>
                    @foreach (var item in categories)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Product"
                               asp-action="Index"
                               asp-route-category="@item.NormalizedName"
                               asp-route-pageNo="1">@item.Name</a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>

    <!-- список товаров -->
    <div class="col-12 col-md-9 col-lg-10">
        <div class="row row-cols-1 row-cols-md-3 g-3">
            @foreach (var item in (Model.Items ?? new List<Dish>()))
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img class="card-img-top" src="@item.Image" alt="@item.Name" style="object-fit:cover; height:180px;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text small text-muted">@item.Description</p>

                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">@item.Price.ToString("0.##") BYN</span>

                                <a class="btn btn-sm btn-primary"
                                   asp-controller="Cart"
                                   asp-action="Add"
                                   asp-route-id="@item.Id"
                                   asp-route-returnUrl="@returnUrl">
                                    В корзину
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- пагинация -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination">
                    @{
                        var prev = Math.Max(1, Model.CurrentPage - 1);
                        var next = Math.Min(Model.TotalPages, Model.CurrentPage + 1);
                    }

                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-category="@currentNormalized"
                           asp-route-pageNo="@prev">«</a>
                    </li>

                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Product"
                               asp-action="Index"
                               asp-route-category="@currentNormalized"
                               asp-route-pageNo="@p">@p</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-category="@currentNormalized"
                           asp-route-pageNo="@next">»</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
